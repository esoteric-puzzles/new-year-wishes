{
  "name": "newyear-wishes",
  "version": "0.0.0",
  "engines": {
    "node": "^18.0.0 || ^20.0.0"
  },
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "build:prod": "ng build --configuration production",
    "build:stats": "ng build --configuration production --stats-json",
    "analyze": "npx webpack-bundle-analyzer dist/newyear-wishes/browser/stats.json",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "generate:blurhash": "node generate-blurhash.js",
    "generate:list": "node generate-image-list.js",
    "convert:webp": "node convert-to-webp.js",
    "optimize:all": "npm run convert:webp && npm run generate:blurhash && npm run generate:list",
    "smash": "git push origin main && ng deploy --base-href=/new-year-wishes/",
    "deploy": "ng deploy --base-href=/new-year-wishes/",
    "setup": "bash setup.sh"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^17.3.0",
    "@angular/common": "^17.3.0",
    "@angular/compiler": "^17.3.0",
    "@angular/core": "^17.3.0",
    "@angular/forms": "^17.3.0",
    "@angular/platform-browser": "^17.3.0",
    "@angular/platform-browser-dynamic": "^17.3.0",
    "@angular/router": "^17.3.0",
    "angular-cli-ghpages": "^2.0.3",
    "blurhash": "^2.0.5",
    "public-google-sheets-parser": "^1.5.4",
    "rxjs": "~7.8.0",
    "seedrandom": "^3.0.5",
    "tslib": "^2.3.0",
    "zone.js": "~0.14.3"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^17.3.9",
    "@angular/cli": "^17.3.9",
    "@angular/compiler-cli": "^17.3.0",
    "@types/jasmine": "~5.1.0",
    "canvas": "^2.11.2",
    "cwebp-bin": "^8.0.0",
    "jasmine-core": "~5.1.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "pngquant-bin": "^9.0.0",
    "typescript": "~5.4.2"
  }
}